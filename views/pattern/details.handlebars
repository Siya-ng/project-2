<h3>{{ pattern.title }}</h3>

<img src="{{pattern.imageUrl}}" width=270 alt="Image">

<div class="">
  {{#if userMatch}}
  <a class="nav-link" href="/pattern/{{pattern.id}}/edit">Edit Pattern</a>
  
  <form class="" action="/pattern/{{pattern.id}}/edit?_method=DELETE" method="post">
    <button type="submit" name="button">Delete</button>
  </form>
  {{/if}}
</div>
<div class="">
  <a href="/profile/{{pattern.creator.slug}}">
    <h5>By: {{ pattern.creator.name }}</h5>
  </a>
  <h5>Date: {{ dateTime }}</h5>
  <a href="/category/{{ pattern.category }}">
    <h5>Category: {{ pattern.category }}</h5>
  </a>
</div>
<div class="">


</div>
<div class="">
  <p>{{ pattern.material }}</p>
  <p> {{ pattern.steps }}</p>
</div>

<div class="">
  <a href="/pattern/{{pattern.id}}/variation/new" class="button">I did this</a>
</div>
{{#if notBookmark}}
<div class="">
  <form class="addBookmarkForm" action="/pattern/{{pattern.id}}/bookmark" method="post">
    <button type="submit" name="bookmarkBtn">Add to Bookmark</button>
  </form>
</div>
{{/if}}
<div class="">
  <h3>Variation</h3>
  <div class="">

    {{#each variations as |variation| }}
    <div class="">
      <a href="/project/{{variation.id}}">
      <img src="{{variation.imageUrl}}" width=150 alt="Image">
      <h5> {{ variation.title }}</h5>
      </a>

    </div>
    {{/each}}

  </div>

</div>
