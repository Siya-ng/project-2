
<h3>Edit {{pattern.title}} </h3>

<form action="/pattern/{{pattern.id}}/edit?_method=PUT" method="post">
  <div class="">
    <label for="title">Title</label>
    <input type="text" name="pattern[title]" placeholder="Basic Drawstring bag">

  </div>
  <div class="">
    <label for="material">Material</label>
    <textarea name="pattern[material]" rows="10" cols="20"></textarea>
    <label for="steps">Steps</label>
    <textarea name="pattern[steps]" rows="10" cols="40"></textarea>
  </div>




  <button type="submit" name="button">Submit</button>
</form>
