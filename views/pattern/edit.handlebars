
<h3>Edit {{pattern.title}} </h3>

<form enctype="multipart/form-data" action="/pattern/{{pattern.id}}/edit?_method=PUT" method="post">
  <div class="">
    <label for="title">Title</label>
    <input type="text" name="pattern[title]" placeholder="Basic Drawstring bag">

  </div>
  <div class="">
    <label for="material">Material</label>
    <textarea name="pattern[material]" rows="10" cols="20"></textarea>
    <label for="steps">Steps</label>
    <textarea name="pattern[steps]" rows="10" cols="40"></textarea>
  </div>
  {{!-- <div class="">

  </div> --}}
  <label for="image">Image :</label>
  <input type="file" name="image" value="image">




  <button type="submit" name="button">Submit</button>
</form>

<form class="" action="/pattern/{{pattern.id}}/edit?_method=DELETE" method="post">
  <button type="submit" name="button">Delete</button>
</form>
