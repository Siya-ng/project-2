
<h3>Edit {{project.title}} </h3>

<form enctype="multipart/form-data" action="/project/{{project.id}}/edit?_method=PUT" method="post">
  <div class="">
    <label for="title">Title</label>
    <input type="text" name="project[title]" placeholder="Basic Drawstring bag">

  </div>
  <div class="">
    <label for="material">Material</label>
    <textarea name="project[material]" rows="10" cols="20"></textarea>
    <label for="reflection">Reflection</label>
    <textarea name="project[reflection]" rows="10" cols="40"></textarea>
  </div>

  <label for="image">Image :</label>
  <input type="file" name="image">




  <button type="submit" name="button">Submit</button>
</form>

<form class="" action="/project/{{project.id}}/edit?_method=DELETE" method="post">
  <button type="submit" name="button">Delete</button>
</form>
