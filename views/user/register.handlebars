<h3>Registration</h3>

<form enctype="multipart/form-data"  action="/register" method="post">
  <label for="name">Name</label>
  <input type="text" name="user[name]" placeholder="e.g. John Doe">

  <label for="email">Email</label>

  <input type="email" name="user[email]" placeholder="e.g. domain@email.com">

  <label for="password">Password</label>

  <input type="password" name="user[password]" placeholder="min. 8 characters">

  <label for="image">Image :</label>
  <input type="file" name="image">

  <button type="submit" name="button">Submit</button>
</form>
